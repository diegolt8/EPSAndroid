<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_buscar_usuario"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.vitaly.myepsproyect.BuscarUsuarioActivity"
    android:orientation="vertical"
    android:background="@drawable/buscarusuario">

    <TextView
        android:text="BUSCAR USUARIO"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:textAlignment="center"
        android:textColorHint="@android:color/background_light"
        android:textColor="@android:color/background_light"
        android:textSize="30sp" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <EditText
            android:layout_width="271dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/etBuscarUsuario"
            android:textColorHint="@android:color/background_light"
            android:hint="Buscar por documento" />

        <Button
            android:text="buscar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnBuscarUsu"
            android:background="@color/colorPrimaryDark" />

    </TableRow>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="331dp"
        android:id="@+id/lvResulBusqueda" />

    <Button
        android:text="volver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnVolverOpcionesAdmin"
        android:onClick="volverOpcionesAdmin"
        android:background="@android:color/holo_red_light" />

</LinearLayout>
