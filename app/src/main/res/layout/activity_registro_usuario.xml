<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_registro_usuario"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.vitaly.myepsproyect.RegistroUsuarioActivity"
    android:background="@drawable/registrar"
    android:weightSum="1"
    android:orientation="vertical">

    <TextView
        android:text="REGISTRAR-USUARIO"
        android:layout_width="348dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="132dp"
        android:textAlignment="center"
        android:layout_marginTop="14dp"
        android:id="@+id/RegistrarUsuario"
        android:textSize="22sp"
        android:layout_weight="0.01"
        android:textColor="@android:color/holo_red_dark" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.50" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/etNombreUsuario"
        android:layout_weight="0.01"
        android:hint="Nombre"
        android:textColor="?android:attr/textColorPrimaryDisableOnly"
        android:textColorHint="@android:color/background_light" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/etApellidoUsuario"
        android:layout_weight="0.01"
        android:hint="Apellido"
        android:textColorHint="@android:color/background_light" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/etTelefono"
        android:layout_weight="0.01"
        android:hint="Telefono"
        android:textColorHint="@android:color/background_light" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/etDireccion"
        android:layout_weight="0.01"
        android:hint="Direccion"
        android:textColorHint="@android:color/background_light" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/etCorreo"
        android:layout_weight="0.01"
        android:hint="Correo electronico"
        android:textColorHint="@android:color/background_light" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/etNicknameUsuario"
        android:layout_weight="0.01"
        android:hint="Nombre usuario"
        android:textColor="@android:color/background_dark"
        android:textColorHint="@android:color/background_light" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/etContraseñaUsuario"
        android:layout_weight="0.01"
        android:hint="Contraseña"
        android:textColor="@android:color/background_dark"
        android:textColorHint="@android:color/background_light" />

    <TextView
        android:text="SELECCIONE REGIMEN"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:layout_weight="0.01"
        android:textColor="@android:color/background_dark"
        android:textColorHint="@android:color/background_light" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spRegimen" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.27" />

    <Button
        android:text="registrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnRegistrar"
        android:layout_weight="0.01"
        android:background="#b0ffffff" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.16" />

    <Button
        android:text="Volver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnVolver"
        android:onClick="VolverLogin"
        android:layout_weight="0.01"
        android:background="@color/colorPrimaryDark" />

</LinearLayout>
